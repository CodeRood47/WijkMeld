<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WijkMeld.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WijkMeld.App.Views"
    xmlns:root="clr-namespace:WijkMeld.App"
    Title="WijkMeld.App"
    Shell.FlyoutBehavior="Disabled">

   
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginView}"
        Route="login" />
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:HomeMapView}"
        Route="home" />

    <ShellContent
        Title="Report Incident"
        ContentTemplate="{DataTemplate local:ReportIncidentView}"
        Route="reportincident" />

    <ShellContent
        Title="Incident Details"
        ContentTemplate="{DataTemplate local:IncidentDetailView}"
        Route="incidentdetails" />
    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate local:RegisterView}"
        Route="register" />


</Shell>
